{
  "packages": ["packages/*", "test-packages/*"],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "4.0.0",
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": "master",
      "message": "chore(release): release %s",
      "exact": true
    }
  }
}
