{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "ci": {
      "dependsOn": ["^lint", "^ci"]
    },
    "//#test": {
      "outputs": [],
      "inputs": ["src/**/*.d.ts", "src/**/*.ts", "test/**/*.ts"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
