{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "ci": {
      "dependsOn": ["^package"],
      "outputs": ["dist/**", "lib/**"]
    },
    "bundle": {
      "dependsOn": ["//#coverage", "^lint"],
      "outputs": ["dist/**", "lib/**"]
    },
    "package": {
      "dependsOn": ["^bundle"],
      "outputs": ["*.vsix"]
    },
    "generate-json-api": {
      "inputs": ["resources/sap-ui-library-api.json"],
      "outputs": ["src"]
    },
    "compile": {
      "dependsOn": [],
      "outputs": ["lib/**"]
    },
    "clean": {
      "outputs": []
    },
    "//#coverage": {
      "dependsOn": ["^clean", "^generate-json-api", "^compile"],
      "outputs": ["coverage"],
      "inputs": ["**/src/**/*.d.ts", "**/src/**/*.ts", "**/test/**/*.ts"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
