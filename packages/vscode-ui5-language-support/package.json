{
  "name": "ui5-language-support",
  "private": true,
  "description": "UI5 Language Support for VSCode",
  "version": "0.0.1",
  "publisher": "SAPSE",
  "license": "Apache-2.0",
  "main": "./lib/src/extension",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "UI5 Editor Tools",
      "properties": {
        "UI5EditorTools.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the UI5 language server."
        }
      }
    }
  },
  "repository": "https://github.com/sap/ui5-editor-tools/tree/master/packages/vscode-ui5-language-support",
  "keywords": [
    "UI5",
    "OpenUI5",
    "SAPUI5"
  ],
  "engines": {
    "vscode": "^1.42.0"
  },
  "scripts": {
    "ci": "npm-run-all compile lint coverage",
    "clean": "rimraf ./lib",
    "compile": "yarn run clean && tsc -p .",
    "compile:watch": "tsc -p . --watch",
    "lint": "eslint . --ext .ts --max-warnings=0 --ignore-path=../../.gitignore",
    "test": "mocha",
    "coverage": "nyc mocha"
  },
  "dependencies": {
    "vscode-languageclient": "6.1.0"
  },
  "devDependencies": {
    "@types/vscode": "1.41.0"
  }
}
