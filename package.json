{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "test-packages/*"
    ],
    "nohoist": [
      "vscode-ui5-language-support/vscode-languageclient",
      "vscode-ui5-language-support/vscode-languageclient/**",
      "vscode-ui5-language-support/@ui5-language-assistant/language-server",
      "vscode-ui5-language-support/@ui5-language-assistant/language-server/**"
    ]
  },
  "scripts": {
    "lerna:version": "lerna version && yarn run cirlce:release",
    "cirlce:release": "git tag -d RELEASE && git tag RELEASE && git push --delete origin RELEASE && git push --tags",
    "lerna:publish": "lerna publish from-git --yes",
    "ci": "npm-run-all deps:check format:validate ci:subpackages",
    "deps:check": "yarn check",
    "compile": "yarn run clean && tsc --build",
    "compile:watch": "yarn run clean && tsc --build --watch",
    "format:fix": "prettier --write \"**/*.@(js|ts|json|md)\" --ignore-path=.gitignore",
    "format:validate": "prettier --check \"**/*.@(js|ts|json|md)\" --ignore-path=.gitignore",
    "lint": "eslint . --ext .ts --fix --max-warnings=0 --ignore-path=.gitignore",
    "ci:subpackages": "lerna run ci",
    "test": "lerna run test",
    "coverage": "lerna run coverage",
    "clean": "lerna run clean"
  },
  "devDependencies": {
    "@types/chai": "4.2.7",
    "@types/mocha": "5.2.7",
    "@types/lodash": "4.14.149",
    "@types/deep-equal-in-any-order": "1.0.1",
    "chai": "4.2.0",
    "deep-equal-in-any-order": "^1.0.24",
    "eslint": "6.8.0",
    "@typescript-eslint/parser": "2.19.0",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-eslint-comments": "3.1.2",
    "husky": "4.2.1",
    "lerna": "3.20.2",
    "lint-staged": "10.0.3",
    "mocha": "7.0.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "source-map-support": "0.5.16",
    "typescript": "3.7.5",
    "cz-conventional-changelog": "3.0.2",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "rimraf": "3.0.1"
  },
  "prettier": {
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
