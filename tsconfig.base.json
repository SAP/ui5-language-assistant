{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "lib": ["es7"],
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "jest-extended"]
  },
  "include": ["src/**/*", "api.d.ts", "global.d.ts"],
  "exclude": ["node_modules/@types/vscode", "**/*-spec.ts"]
}
