{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "lib": ["es7"],
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "api.d.ts"]
}
